{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist/packages/all",
    "target": "es2015",
    "lib": ["es5", "es2015", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular/viching-editor": ["./src/lib/public_api.ts"],
      "ve-build-tools": ["./tools/package-tools"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": [
    "./src/universal-app/prerender.ts",
    "node_modules/",
    "tools/dashboard/node_modules/",
    "tools/screenshot-test/node_modules/"
  ]
}
